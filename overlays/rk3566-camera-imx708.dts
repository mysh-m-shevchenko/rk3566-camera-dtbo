/*
 * Device tree overlay for IMX708 (Raspberry Pi Camera Module 3) on RK3566
 *
 * Sony IMX708 - 12MP MIPI CSI-2 sensor
 * Used in Raspberry Pi Camera Module 3
 * Features HDR, autofocus, and wide dynamic range
 *
 * Compatible with Radxa Zero 3W and similar RK3566-based boards
 * Uses I2C2 and CSI2 DPHY0 in full mode (2 lanes)
 *
 * Note: Requires kernel CONFIG_VIDEO_IMX708=y and proper ISP tuning files
 *
 * Copyright (c) 2024 MYSh LLC
 */
/dts-v1/;
/plugin/;

#include "dt-bindings.h"

/ {
	compatible = "rockchip,rk3566";

	metadata {
		title = "IMX708 Camera (Raspberry Pi Camera v3)";
		category = "camera";
		exclusive = "csi2_dphy0";
		description = "Enable Sony IMX708 12MP camera sensor (RPi Camera v3) on CSI2 DPHY0";
	};
};

&{/} {
	clk_cam_24m: external-camera-clock-24m {
		status = "okay";
		compatible = "fixed-clock";
		clock-frequency = <24000000>;
		clock-output-names = "clk_cam_24m";
		#clock-cells = <0>;
	};

	imx708_vdda: imx708-vdda {
		status = "okay";
		compatible = "regulator-fixed";
		regulator-name = "imx708_vdda";
		regulator-min-microvolt = <2800000>;
		regulator-max-microvolt = <2800000>;
		regulator-always-on;
		regulator-boot-on;
	};

	imx708_vddd: imx708-vddd {
		status = "okay";
		compatible = "regulator-fixed";
		regulator-name = "imx708_vddd";
		regulator-min-microvolt = <1100000>;
		regulator-max-microvolt = <1100000>;
		regulator-always-on;
		regulator-boot-on;
	};

	imx708_vdddo: imx708-vdddo {
		status = "okay";
		compatible = "regulator-fixed";
		regulator-name = "imx708_vdddo";
		regulator-min-microvolt = <1800000>;
		regulator-max-microvolt = <1800000>;
		regulator-always-on;
		regulator-boot-on;
	};
};

&i2c2 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&i2c2m1_xfer>;
	#address-cells = <1>;
	#size-cells = <0>;

	camera_imx708: camera-imx708@1a {
		status = "okay";
		compatible = "sony,imx708";
		reg = <0x1a>;
		clocks = <&clk_cam_24m>;
		clock-names = "xclk";

		vana-supply = <&imx708_vdda>;
		vdig-supply = <&imx708_vddd>;
		vddl-supply = <&imx708_vdddo>;

		reset-gpios = <&gpio3 RK_PC6 GPIO_ACTIVE_LOW>;

		rockchip,camera-module-index = <0>;
		rockchip,camera-module-facing = "back";
		rockchip,camera-module-name = "arducam-imx708";
		rockchip,camera-module-lens-name = "default";

		port {
			imx708_out: endpoint {
				remote-endpoint = <&mipi_in_ucam0>;
				data-lanes = <1 2>;
				link-frequencies = /bits/ 64 <450000000>;
			};
		};
	};
};

&csi2_dphy_hw {
	status = "okay";
};

&csi2_dphy0 {
	status = "okay";

	ports {
		#address-cells = <1>;
		#size-cells = <0>;

		port@0 {
			reg = <0>;
			#address-cells = <1>;
			#size-cells = <0>;

			mipi_in_ucam0: endpoint@1 {
				reg = <1>;
				remote-endpoint = <&imx708_out>;
				data-lanes = <1 2>;
			};
		};

		port@1 {
			reg = <1>;
			#address-cells = <1>;
			#size-cells = <0>;

			dphy0_out: endpoint@1 {
				reg = <1>;
				remote-endpoint = <&isp0_in>;
			};
		};
	};
};

&rkisp_vir0 {
	status = "okay";

	port {
		#address-cells = <1>;
		#size-cells = <0>;

		isp0_in: endpoint@0 {
			reg = <0>;
			remote-endpoint = <&dphy0_out>;
		};
	};
};

&rkisp {
	status = "okay";
};

&rkisp_mmu {
	status = "okay";
};

&rkcif_mmu {
	status = "okay";
};

&rkcif {
	status = "okay";
};
